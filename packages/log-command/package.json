{
  "name": "log-command",
  "version": "0.2.5",
  "description": "This small script facilitates obtaining a log when running a command.",
  "repository": {
    "type": "git",
    "url": "github:alfonsocj/log-command"
  },
  "author": "Alfonso Curbelo",
  "license": "MIT",
  "scripts": {
    "build": "packemon build --declaration",
    "check": "yarn run type && yarn run test && yarn run lint",
    "clean": "packemon clean",
    "coverage": "yarn run test --coverage",
    "format": "prettier --write ./src ./tests",
    "lint": "eslint --cache --fix ./src/* ./tests/*",
    "pack": "NODE_ENV=production packemon pack --addEngines --declaration",
    "prelease": "yarn run pack && yarn run check",
    "release": "echo 'Customize your own release script!'",
    "test": "jest",
    "type": "tsc && tsc -p ./tests",
    "validate": "packemon validate",
    "watch": "packemon watch"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "chokidar": "^3.5.3",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "latest",
    "eslint-plugin-import": "^2.25.2",
    "packemon": "^2.2.2",
    "prettier": "^2.6.2",
    "tsc": "^2.0.4",
    "typescript": "^4.7.2"
  },
  "packemon": {
    "format": "cjs",
    "platform": "node"
  },
  "main": "./cjs/index.cjs",
  "type": "commonjs",
  "files": [
    "README.md",
    "cjs/**/*.{cjs,mjs,map}",
    "dts/**/*.d.ts",
    "src/**/*.{ts,tsx,json}"
  ],
  "types": "./dts/index.d.ts"
}
